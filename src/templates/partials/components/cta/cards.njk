{% macro value() %}
  <section class="info-boxes">
    <div class="_container">

      <div class="card-container">

        {% for card in cards %}
          <div class="card">
            <div class="link-details {{ card.colour }}">
              <h2 class="heading-3"><a href="{{ card.link }}" title="{{ card.title | replace("<br> ", "") }}">{{ card.title | safe }}</a></h2>
            </div>
            <div class="image-container">
              <picture>
                <source data-srcset="{{ card.image }}&fm=webp&w=400&h=450" alt="" type="image/webp">
                <img class="lazy" loading="lazy" src="{{ card.image }}&fm=jpg&w=8&h=8" data-src="{{ card.image }}&fm=jpg&w=400&h=450" alt="{{ card.alt }}">
              </picture>
            </div>
          </div>
        {% endfor %}

      </div>

    </div>
  </section>
{% endmacro %}
