{% macro scripts() %}
  {# <script src="assets/js/hero.js"></script> #}
{% endmacro %}

{% macro value() %} 
{% for item in items %}
  <section class="small-cards {{ item.bgColour }} {{ item.position }}"> 
    <div class="container">
      
      <div class="card-container">
        {% for card in item.cards %}
          <div class="card">
            <a href="{{ card.link }}" title="{{ card.title }}">
              <div class="info">
                <h3 class="heading-5">{{ card.title | safe }}</h3>
                <div class="content">
                  {{ card.content }}
                </div>
                <span class="fa-solid fa-arrow-right-long"></span>
              </div>
              <div class="image-container"> 
                <img src="{{ card.image }}" alt="alt text" /> 
              </div>
            </a>
          </div> 
        {% endfor %} 
      </div>

    </div>
  </section>
{% endfor %}
{% endmacro %}