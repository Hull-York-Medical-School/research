{% set items=[
    {
      "bgColour": "-grey",
      "title": "You may also be interested in:",
      "cards": [
        {
          "title": "Collaborate <br /> with us",
          "image": "https://images.unsplash.com/photo-1618218630053-07b524185bbf",
          "link": "#"
        },
        {
          "title": "POSTGRADUATE <br /> RESEARCH",
          "image": "https://images.unsplash.com/photo-1618218630053-07b524185bbf",
          "link": "#"
        },
        {
          "title": "FIND A RESEARCH <br /> GROUP OR CENTRE",
          "image": "https://images.unsplash.com/photo-1618218630053-07b524185bbf",
          "link": "#"
        }
      ]
    }
  ] 
%}

{% macro styles() %}
  <link rel="stylesheet" href="assets/css/components/research/cards/standard-cards.min.css" type="text/css" />
{% endmacro %}

{% macro scripts() %}
  {# <script src="assets/js/hero.js"></script> #}
{% endmacro %}

{% macro value() %} 
{% for item in items %}
  <section class="regular-cards {{ item.bgColour }} {{ item.position }}"> 
    <div class="container">

      <h2 class="heading-2">{{ item.title }}</h2>
      
      <div class="card-container">
        {% for card in item.cards %}
          <div class="card">
            <a href="{{ card.link }}" title="{{ card.title }}">
              <div class="info">
                <h3 class="heading-4">{{ card.title | safe }}</h3> 
                <span class="fa-solid fa-arrow-right-long"></span>
              </div>
              <div class="image-container"> 
                <img src="{{ card.image }}" alt="alt text" /> 
              </div>
            </a>
          </div> 
        {% endfor %} 
      </div>

    </div>
  </section>
{% endfor %}
{% endmacro %}