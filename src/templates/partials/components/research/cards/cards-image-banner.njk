{% macro styles() %}
  <link rel="stylesheet" href="assets/css/components/research/cards/cards-image-banner.min.css" type="text/css" />
{% endmacro %}

{% macro scripts() %}
  {# <script src="assets/js/hero.js"></script> #}
{% endmacro %}

{% macro value() %} 
{% for item in items %}
  <div class="cards-image-banner {{ item.bgColour }} {{ item.position }}"> 

    <div class="image-container">
      <picture>
        <source media="(max-width: 578px)" data-srcset="{{ item.backgroundImage + '?crop=entropy&cs=srgb&fm=webp&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYxODQ5MTI1OA&ixlib=rb-1.2.1&q=85&w=800' }}" type="image/webp">
        <source media="(max-width: 578px)" data-srcset="{{ item.backgroundImage + '?crop=entropy&cs=srgb&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYxODQ5MTI1OA&ixlib=rb-1.2.1&q=85&w=800' }}">
        <source data-srcset="{{ item.backgroundImage + '?crop=entropy&cs=srgb&fm=webp&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYxODQ5MTI1OA&ixlib=rb-1.2.1&q=85&w=1440' }}" type="image/webp">
        <img class="lazy" src="{{ item.backgroundImage + '?crop=entropy&cs=srgb&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYxODQ5MTI1OA&ixlib=rb-1.2.1&q=85&w=8&h=8' }}" data-src="{{ item.backgroundImage + '?crop=entropy&cs=srgb&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTYxODQ5MTI1OA&ixlib=rb-1.2.1&q=85&w=1440&h=900' }}" alt="Siemens">
      </picture>
    </div>


    <div class="container">
      <div class="content-container">

        <h2 class="component-title">{{ item.title }}</h2>
        

        <div class="card-container">
          {% for card in item.cards %}
            <div class="card">
              <a href="{{ card.link }}" title="{{ card.title }}">
                <div class="info">
                  <h3 class="heading-5">{{ card.title }}</h3>
                  <span class="fa-solid fa-arrow-right-long"></span>
                </div>
                <div class="image-container">
                  <img src="{{ card.image }}" alt="alt text" /> 
                </div>
              </a>
            </div> 
          {% endfor %} 
        </div>
      
      </div>
    </div>

  </div>
{% endfor %}
{% endmacro %}